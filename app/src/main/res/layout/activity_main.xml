<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rishabh.guessit.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I am thinking of a number between 1 to 20!!"
        android:layout_margin="10dp"
        android:textSize="15sp"
        android:id="@+id/Text1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="80dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="10dp"
        android:hint="Guess your number here!!"
        android:id="@+id/EditText1"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/guess"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="150dp"
        android:id="@+id/ImageView1"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp"
        android:onClick="Click"
        android:id="@+id/Button1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Text0"
        android:layout_alignBottom="@+id/Text0"
        android:layout_centerHorizontal="true"
        android:text="   Trials"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Text0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Text1"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20sp" />

</android.widget.RelativeLayout>
